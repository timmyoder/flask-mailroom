{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    <label for="name-input">Donor:</label>
    <input id="name-input" type="text" name="name"><br>

    <label for="value-input">Value:</label>
    <input id="value-input" type="text" name="value"><br>

    <input type="submit" value="Create Donation">
</form>
{% endblock content %}
